@page
@model Jubebe.Web.Pages.SocksOverviewModel
@{
    ViewData["Title"] = "Socks overview";
}

<div class="container py-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="h4 mb-1 page-title">Socks Overview</h2>
            <div class="subtitle">Inventory snapshot of all SKUs</div>
        </div>
        <a asp-page="/AddSock" class="btn btn-success custom-btn">
            âž• Add Sock
        </a>
    </div>

    <div class="card border-0 rounded-3">
        <div class="card-body border-bottom">
            <form method="get" asp-page-handler="Search" class="row g-2 align-items-center">
                <div class="col-12 col-md-8">
                    <div class="input-group">
                        <span class="input-group-text border-end-0">
                            <span class="text-body-secondary">ðŸ”Ž</span>
                        </span>
                        <input name="query" class="form-control border-start-0" type="search" placeholder="Search by serial numberâ€¦" />
                    </div>
                </div>
                <div class="col-6 col-md-auto">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
                <div class="col-6 col-md-auto">
                    <a asp-page="./SocksOverview" class="btn btn-link text-decoration-none">Reset</a>
                </div>
            </form>

        </div>

        @if (Model.allSocks is { Count: > 0 })
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="small text-body-secondary">
                            <th scope="col">Serial #</th>
                            <th scope="col" class="text-end">Price / Pair</th>
                            <th scope="col" class="text-end">Pairs / Sack</th>
                            <th scope="col" class="text-end">Sacks</th>
                            <th scope="col" class="text-end">Overall Price</th>
                            <th scope="col">Date</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.allSocks)
                        {
                            <tr>
                                <td class="fw-medium">
                                    <span class="badge">@s.SerialNumber</span>
                                </td>
                                <td class="text-end">
                                    <span class="badge">@s.PricePerPair.ToString("N2")</span>
                                </td>
                                <td class="text-end">
                                    <span class="badge">@s.QuantityPerSack</span>
                                </td>
                                <td class="text-end">
                                    <span class="badge">@s.SackQuantity</span>
                                </td>
                                <td class="text-end fw-semibold">
                                    <span class="badge">@s.OverallPrice.ToString("N2")</span>
                                </td>
                                <td class="text-body-secondary">@s.dateTime.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button"class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Sell</button>
                                        <a asp-page="/EditSock" asp-route-id="@s.Id" class="btn btn-outline-secondary">Edit</a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">
                    No socks found. Click <a asp-page="/AddSock" class="alert-link">Add Sock</a> to create your first item.
                </div>
            </div>
        }
    </div>
</div>

@* sell modal *@
